<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="51dp"
    android:nestedScrollingEnabled="false">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_gray">

        <!-- guide line -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gd_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="15dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gd_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="15dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gd_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="10dp" />

        <!--  title background  -->
        <TextView
            android:id="@+id/title_bg"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/classic_blue"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/school_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="아주 고등학교"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/gd_left"
            app:layout_constraintTop_toTopOf="@id/gd_top" />

        <ImageButton
            android:id="@+id/setting_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:src="@drawable/ic_baseline_people_outline_24"
            app:layout_constraintRight_toRightOf="@id/gd_right"
            app:layout_constraintTop_toTopOf="@id/gd_top" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="user"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/gd_left"
            app:layout_constraintTop_toBottomOf="@id/school_name" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="님, 안녕하세요!"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/user_name"
            app:layout_constraintTop_toBottomOf="@id/school_name" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_school"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_marginTop="25dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:layout_constraintLeft_toLeftOf="@id/gd_left"
            app:layout_constraintRight_toRightOf="@id/gd_right"
            app:layout_constraintTop_toBottomOf="@id/user_name"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:id="@+id/today_lunch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="오늘의 급식"
                    android:textColor="@color/classic_blue"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="80dp"
                    android:layout_height="2dp"
                    android:background="@color/faded_gray" />

                <TextView
                    android:id="@+id/cafeteria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="MENU1\nMENU2\nMENU3"
                    android:textColor="@android:color/black"
                    android:textSize="15dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 내 게시판 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_my_community"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:layout_constraintLeft_toLeftOf="@id/gd_left"
            app:layout_constraintRight_toRightOf="@id/gd_right"
            app:layout_constraintTop_toBottomOf="@id/cv_school"
            tools:ignore="MissingConstraints">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <TextView
                    android:id="@+id/title_my_community"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="최신 게시판"
                    android:textColor="@color/classic_blue"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_goneMarginBottom="10dp" />

                <!--Recycler View for my community-->
                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/title_my_community">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_my_community"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:scrollbarFadeDuration="0"
                        android:scrollbarSize="5dp"
                        android:scrollbarThumbVertical="@android:color/darker_gray"
                        android:scrollbars="vertical"
                        tools:ignore="MissingConstraints" />
                </androidx.core.widget.NestedScrollView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- 핫 게시판 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_hot_article"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:layout_constraintBottom_toTopOf="@id/cv_contest"
            app:layout_constraintLeft_toLeftOf="@id/gd_left"
            app:layout_constraintRight_toRightOf="@id/gd_right"
            app:layout_constraintTop_toBottomOf="@id/cv_my_community"
            tools:ignore="MissingConstraints">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp">

                <TextView
                    android:id="@+id/title_hot_community"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HOT 게시물"
                    android:textColor="@color/classic_blue"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_goneMarginBottom="10dp" />

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/title_hot_community"
                    android:layout_marginBottom="10dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_hot_article"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/title_hot_community"
                        android:overScrollMode="never"
                        android:scrollbarFadeDuration="0"
                        android:scrollbarSize="1dp"
                        android:scrollbarThumbVertical="@android:color/darker_gray"
                        android:scrollbars="vertical"
                        tools:ignore="MissingConstraints" />
                </androidx.core.widget.NestedScrollView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- 공모전 모아보기 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_contest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:layout_constraintLeft_toLeftOf="@id/gd_left"
            app:layout_constraintRight_toRightOf="@id/gd_right"
            app:layout_constraintTop_toBottomOf="@id/cv_hot_article"
            tools:ignore="MissingConstraints">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp">

                <TextView
                    android:id="@+id/title_contest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="공모전 모아보기"
                    android:textColor="@color/classic_blue"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_goneMarginBottom="10dp" />

                <TextView
                    android:id="@+id/more_contest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/rv_contest"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:text="더 보기"
                    android:textColor="@color/classic_blue"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:ignore="NotSibling" />

                <TextView
                    android:id="@+id/pleaseTab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@id/title_contest"
                    android:gravity="center"
                    android:textSize="15sp" />

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/title_contest">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_contest"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/title_contest"
                        android:orientation="horizontal"
                        android:overScrollMode="never"
                        tools:ignore="MissingConstraints" />
                </androidx.core.widget.NestedScrollView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>