<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="24sp"
        android:text="도담도담"
        android:textAlignment="center"
        android:layout_marginBottom="200dp"
        android:textColor="@color/colorPrimary"
        android:textSize="100sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_custom_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_cta_button"
        android:layout_marginBottom="20dp"
        android:text="카카오 로그인" />

    <Button
        android:id="@+id/btn_custom_login2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_cta_button_1"
        android:layout_marginBottom="20dp"
        android:text="카카오 로그인" />

    <Button
        android:id="@+id/btn_custom_login3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_cta_button_2"
        android:layout_marginBottom="20dp"
        android:text="카카오 로그인" />


</LinearLayout>